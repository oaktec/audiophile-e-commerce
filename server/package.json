{
  "name": "audiophile-e-commerce-server",
  "version": "1.0.0",
  "description": "An Express server for an e-commerce website",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig-build.json && cp -r src/data dist/data",
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "dev-stop": "docker-compose -f docker-compose.dev.yml down",
    "debug": "nodemon --watch \"src/**/*.{ts,js}\" -e ts,js --exec node --inspect=0.0.0.0:9229 -r ts-node/register src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest --runInBand",
    "docker:up": "docker-compose up -d && yarn docker:shell",
    "docker:down": "docker-compose down",
    "docker:shell": "docker exec -it server sh"
  },
  "keywords": [],
  "author": "Ben Eatock",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "connect-pg-simple": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.1",
    "stripe": "^13.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.3",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "http-errors": "^2.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
